<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controllers.tache.InfoTacheSimplePopupController"
      style="-fx-padding: 20;" spacing="20"
>
    <HBox alignment="CENTER">
        <Label style="-fx-font-size: 24px; -fx-text-fill: #2196f3;">
            Tache Simple Information
        </Label>
    </HBox>

    <VBox alignment="CENTER" spacing="10">
        <GridPane alignment="CENTER" hgap="20">
            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <HBox GridPane.columnIndex="0" alignment="CENTER">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-padding: 5 10; -fx-font-weight: bold;">Name</Label>
            </HBox>
            <HBox GridPane.columnIndex="1" alignment="CENTER">
                <Label fx:id="nameLabel" style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-padding: 5 10; -fx-border-width: 1px; -fx-border-color: #4682B4; -fx-border-radius: 10;"/>
            </HBox>
        </GridPane>

        <GridPane alignment="CENTER" hgap="20">
            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <HBox GridPane.columnIndex="0" alignment="CENTER">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-padding: 5 10; -fx-font-weight: bold;">Duration</Label>
            </HBox>
            <HBox GridPane.columnIndex="1" alignment="CENTER">
                <Label fx:id="durationLabel" style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-padding: 5 10; -fx-border-width: 1px; -fx-border-color: #4682B4; -fx-border-radius: 10;"/>
            </HBox>
        </GridPane>

        <GridPane alignment="CENTER" hgap="20">
            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <HBox GridPane.columnIndex="0" alignment="CENTER">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-padding: 5 10; -fx-font-weight: bold;">
                    Priority
                </Label>
            </HBox>
            <HBox GridPane.columnIndex="1" alignment="CENTER">
                <Label fx:id="priorityLabel" style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-padding: 5 10; -fx-border-width: 1px; -fx-border-color: #4682B4; -fx-border-radius: 10;"/>
            </HBox>
        </GridPane>

        <GridPane alignment="CENTER" hgap="20">
            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <HBox GridPane.columnIndex="0" alignment="CENTER">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-padding: 5 10; -fx-font-weight: bold;">
                    Deadline
                </Label>
            </HBox>
            <HBox GridPane.columnIndex="1" alignment="CENTER">
                <Label fx:id="deadlineLabel" style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-padding: 5 10; -fx-border-width: 1px; -fx-border-color: #4682B4; -fx-border-radius: 10;"/>
            </HBox>
        </GridPane>

        <GridPane alignment="CENTER" hgap="20">
            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <HBox GridPane.columnIndex="0" alignment="CENTER">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-padding: 5 10; -fx-font-weight: bold;">
                    Category
                </Label>
            </HBox>
            <HBox GridPane.columnIndex="1" alignment="CENTER">
                <Label fx:id="categoryLabel" style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-padding: 5 10; -fx-border-width: 1px; -fx-border-color: #4682B4; -fx-border-radius: 10;"/>
            </HBox>
        </GridPane>

        <GridPane alignment="CENTER" hgap="20">
            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <HBox GridPane.columnIndex="0" alignment="CENTER">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-padding: 5 10; -fx-font-weight: bold;">
                    State
                </Label>
            </HBox>
            <HBox GridPane.columnIndex="1" alignment="CENTER">
                <Label fx:id="stateLabel" style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-padding: 5 10; -fx-border-width: 1px; -fx-border-color: #4682B4; -fx-border-radius: 10;"/>
            </HBox>
        </GridPane>

        <GridPane alignment="CENTER" hgap="20">
            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <HBox GridPane.columnIndex="0" alignment="CENTER">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-padding: 5 10; -fx-font-weight: bold;">
                    Periodicity
                </Label>
            </HBox>
            <HBox GridPane.columnIndex="1" alignment="CENTER">
                <Label fx:id="periodicityLabel" style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-padding: 5 10; -fx-border-width: 1px; -fx-border-color: #4682B4; -fx-border-radius: 10;"/>
            </HBox>
        </GridPane>
    </VBox>

    <HBox alignment="CENTER">
        <Button style="-fx-background-color: #2B7BFF; -fx-text-fill: white; -fx-font-size: 18px; -fx-cursor: hand;"
                onAction="#handleEditButtonAction">
            <effect>
                <DropShadow color="#1F579D" radius="5" spread="0.2"/>
            </effect>
            Edit
        </Button>
    </HBox>
</VBox>
